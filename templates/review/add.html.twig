{% extends 'base.html.twig' %}

{% block title %}Напиши ревю за {{ teacher.name }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="show-article-container p-3 mt-4">
                    <div class="row">
                        <div class="col-sm-12">
                            <img class="show-article-img" src="{{ asset('images/teacher-pics/') ~ teacher.logo }}">
                            <div class="show-article-title-container d-inline-block pl-3 align-middle">
                                <span class="show-article-title ">{{ teacher.name }}</span>
                                <br>
                                <span class="align-left article-details">Оценка: <b>{% if teacher.rating != 0 or teacher.rating|default == false %}{{ teacher.rating }}{% else %}Няма{% endif %}</b> </span>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <hr>
                            {{ form(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}